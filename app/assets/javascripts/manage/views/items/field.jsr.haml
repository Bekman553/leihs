%div{:class => "{{if ~fieldColor}}{{>~fieldColor}} {{/if}}field row emboss padding-inset-xs margin-vertical-xxs margin-right-xs", :"data-type" => "field", :"data-id" => "{{>~field.id}}", :"data-required" => "{{>~field.required}}", :"data-editable" => "{{>~field.isEditable()}}"}
  .col1of2.padding-vertical-xs{:"data-type" => "key"}
    {{if !~field.visibility_dependency_field_id && ~removeable}}
    %a.font-size-m.link.grey.padding-inset-xs{:"data-type" => 'remove-field'}
      %i.icon-remove-sign
    {{/if}}
    %strong.font-size-m.inline-block
      {{>~field.getLabel()}}
      {{if ~field.required}}*{{/if}}
  .col1of2{:"data-type" => "value"}
    
    {{if (~writeable && !~itemData) || (~writeable && ~field.isEditable(~itemData))}}

    {{include tmpl="manage/views/items/fields/writeable/"+~field.type/}}

    {{else}}

    .padding-vertical-xs.font-size-m{:"data-value" => "{{>~field.getValue(~itemData, ~field.attribute)}}"}
      {{include tmpl="manage/views/items/fields/readonly/"+~field.type/}}

    {{/if}}
