.row

  %nav
    %ul

      %li{:style => "z-index: 800; position: relative"}
        %a.navigation-tab-item.margin-right-xxs.padding-horizontal-m.float-left{:href => borrow_root_path,
        :class => tabs.blank? ? "active" : "straight-right"}
          %i.icon-home
          = _("Start")
          - unless tabs.blank?
            .navigation-tab-arrow-border
            .navigation-tab-arrow

      - if tabs
        - tabs.each_with_index do |tab, i|
          %li{:style => "z-index: #{799-i}; position: relative"}
            %a.negative-margin-left-xxs-alt.straight-left.navigation-tab-item.margin-right-xxs.padding-horizontal-m.padding-left-l.float-left{:href => i == tabs.length-1 ? request.fullpath : tab[0],
            :class => i == tabs.length-1 ? "active" : "straight-right"}
              = CGI::unescape tab[1]
              - if i != tabs.length-1
                .navigation-tab-arrow-border
                .navigation-tab-arrow