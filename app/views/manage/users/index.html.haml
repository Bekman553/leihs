- content_for :title, _("List of Users")
- content_for :admin_section, "active"

.wrapper.margin-top-m

  = render :partial => 'manage/tabs/admin', :locals => {:active_tab => :users}

  #user-index-view.row.content-wrapper.min-height-xl.min-width-full.straight-top

    .margin-top-l.padding-horizontal-m

      .row

        %h1.headline-l.float-left= yield :title

        - if current_inventory_pool
          %a.button.white.float-right{:href => manage_new_inventory_pool_user_path}= _("New User")
        - else
          %a.button.white.float-right{:href => manage_users_new_path}= _("New User")

    .margin-top-m

      #list-tabs.inline-tab-navigation

        -if current_inventory_pool
          = link_to _("All"), manage_inventory_pool_users_path, class: "inline-tab-item #{"active" unless @role}"
          = link_to _("Customer"), manage_inventory_pool_users_path(params: {role: "customers"}), class: "inline-tab-item #{"active" if @role == "customers"}"
          = link_to _("Lending manager"), manage_inventory_pool_users_path(params: {role: "lending_managers"}), class: "inline-tab-item #{"active" if @role == "lending_managers"}"
          = link_to _("Inventory manager"), manage_inventory_pool_users_path(params: {role: "inventory_managers"}), class: "inline-tab-item #{"active" if @role == "inventory_managers"}"
        - else 
          = link_to _("All"), manage_users_path, class: "inline-tab-item #{"active" unless @role == "admins"}"
          = link_to _("Administrator"), manage_users_path(params: {role: "admins"}), class: "inline-tab-item #{"active" if @role == "admins"}"

      .row.margin-vertical-xs.padding-horizontal-m

        .col1of5
          %input#list-search{type: "text", name: "input", placeholder: _("Search..."), autocomplete: :off}

        - if @role

          %form#list-filters.col4of5.padding-left-s
            %label.button.inset.white.height-xxs
              %input{:name => :suspended, :type => :checkbox, :value => :true, :autocomplete => :off}
              %span= _("Suspended")

    #user-list.list-of-lines.even.separated-top.padding-bottom-s

:coffeescript
  jQuery ->
    new App.UsersIndexController
      el: $("#user-index-view")
      role: "#{@role}"
