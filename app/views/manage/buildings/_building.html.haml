.row.line

  .col2of6.line-col
    %strong= building.name

  .col1of6.line-col.text-align-left
    %strong= building.code

  .col1of6.line-col
    %strong= _("%s locations") % building.locations.count

  .col1of6.line-col
    %strong= _("%s items") % (current_inventory_pool ? building.items.where("#{current_inventory_pool.id} IN (inventory_pool_id, owner_id)") : building.items).count

  .col1of6.line-col.line-actions

    - if building.can_destroy?

      .multibutton

        %a.button.white{href: polymorphic_path([:manage, :edit, current_inventory_pool, building].compact)}
          = current_inventory_pool ? _("Show") : _("Edit")

        .dropdown-holder.inline-block
          .button.white.dropdown-toggle
            .arrow.down

          %ul.dropdown.right

            %li
              %a.dropdown-item.red{href: manage_delete_building_path(building), data: {method: :delete, confirm: _("Are you sure you want to delete '%s'?") % building}}
                %i.icon-trash
                = _("Delete")

    - else

      %a.button.white{href: polymorphic_path([:manage, :edit, current_inventory_pool, building].compact)}
        = current_inventory_pool ? _("Show") : _("Edit")
