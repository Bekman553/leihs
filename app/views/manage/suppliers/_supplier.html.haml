.row.line

  .col2of4.line-col
    %strong= supplier.name

  .col1of4.line-col
    %strong= _("%d items") % supplier.items.count

  .col1of4.line-col.line-actions

    - if supplier.can_destroy?

      .multibutton

        %a.button.white{href: manage_edit_supplier_path(supplier)}
          = _("Edit")

        .dropdown-holder.inline-block
          .button.white.dropdown-toggle
            .arrow.down

          %ul.dropdown.right

            %li
              %a.dropdown-item.red{href: manage_delete_supplier_path(supplier), data: {method: :delete, confirm: _("Delete")}}
                %i.icon-trash
                = _("Delete")

    - else

      %a.button.white{href: manage_edit_supplier_path(supplier)}
        = _("Edit")
