.row.line

  .col2of4.line-col
    %strong= supplier.name

  .col1of4.line-col
    %strong= _("%d items") % (current_inventory_pool ? supplier.items.where("#{current_inventory_pool.id} IN (inventory_pool_id, owner_id)").count : supplier.items.count)

  .col1of4.line-col.line-actions

    - if supplier.can_destroy?

      .multibutton

        %a.button.white{href: polymorphic_path([:manage, :edit, current_inventory_pool, supplier].compact)}
          = current_inventory_pool ? _("Show") : _("Edit")

        .dropdown-holder.inline-block
          .button.white.dropdown-toggle
            .arrow.down

          %ul.dropdown.right

            %li
              %a.dropdown-item.red{href: manage_delete_supplier_path(supplier), data: {method: :delete, confirm: _("Delete")}}
                %i.icon-trash
                = _("Delete")

    - else

      %a.button.white{href: polymorphic_path([:manage, :edit, current_inventory_pool, supplier].compact)}
        = current_inventory_pool ? _("Show") : _("Edit")
